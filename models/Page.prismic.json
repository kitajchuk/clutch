        "image": {
            "type": "Image",
            "fieldset": "Page Image",
            "config": {
                "placeholder": "Page Image",
                "constraint": {
                    "width": "2400"
                },
                "thumbnails": [
                    {
                        "name": "tablet",
                        "width": "1600",
                        "height": "5000"
                    },
                    {
                        "name": "mobile",
                        "width": "800",
                        "height": "5000"
                    }
                ]
            }
        }
