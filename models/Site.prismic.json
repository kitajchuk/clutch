{
    "Information":{
        "title":{
            "type":"Text",
            "fieldset":"Title",
            "config":{
                "label":"Title"
            }
        },
        "url":{
            "type":"Text",
            "fieldset":"Site URL",
            "config":{
                "label":"Site URL"
            }
        },
        "description":{
            "type":"Text",
            "fieldset":"Description",
            "config":{
                "label":"Description"
            }
        },
        "email":{
            "type":"Text",
            "fieldset":"Email",
            "config":{
                "label":"Email"
            }
        },
        "phone":{
            "type":"Text",
            "config":{
                "label":"Phone"
            }
        },
        "location":{
            "type":"StructuredText",
            "config":{
                "multi":"paragraph",
                "label":"Location",
                "placeholder":"Location"
            }
        }
    },
    "Analytics":{
        "googleUA":{
            "type":"Text",
            "fieldset":"Google Analytics Tag",
            "config":{
                "label":"Google Analytics Tag"
            }
        },
        "googleVerify":{
            "type":"Text",
            "fieldset":"Google Site Verification",
            "config":{
                "label":"Google Site Verification"
            }
        }
    },
    "Navigation":{
        "navi":{
            "type":"Slices",
            "fieldset":"Navigation Items",
            "config":{
                "choices":{
                    "nav_item":{
                        "type":"Slice",
                        "fieldset":"Nav Item",
                        "description":"An item in the main navigation",
                        "icon":"open_in_new",
                        "display":"list",
                        "non-repeat":{
                            "label":{
                                "type":"Text",
                                "config":{
                                    "label":"Label",
                                    "placeholder":"Display label"
                                }
                            },
                            "name":{
                                "type":"Text",
                                "config":{
                                    "label":"Name",
                                    "placeholder":"Display text"
                                }
                            },
                            "slug":{
                                "type":"Text",
                                "config":{
                                    "label":"Slug",
                                    "placeholder":"URL slug ( skip if linking document below )"
                                }
                            },
                            "page":{
                                "type":"Link",
                                "config":{
                                    "select":"document",
                                    "customtypes":[
                                        "page"
                                    ],
                                    "label":"Page",
                                    "placeholder":"Link to page document"
                                }
                            }
                        },
                        "repeat":{

                        }
                    }
                }
            }
        }
    }
